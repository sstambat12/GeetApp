<Page
    x:Class="GeetApp.DisplaySongDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GeetApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <StackPanel Orientation="Vertical" Margin="4" >
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="Title" Width="150"  Height="30" />
                <TextBox x:ConnectionId='6' Name="title" Text="{Binding}" Width="400" Height="30" BorderThickness="0"                          />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="Album" Width="150"  Height="30" />
                <TextBox x:ConnectionId='5' Name="album" Text="{Binding}" Width="400" Height="30" BorderThickness="0"                         />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="Artist" Width="150"  Height="30" />
                <TextBox x:ConnectionId='4' Name="artist" Text="{Binding}" Width="400" Height="30" BorderThickness="0"                          />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="4">
                <TextBlock Text="CoverImage" Width="150"  Height="30" />
                <Image x:ConnectionId='3' Name="CoverImage" Source="{Binding}" Width="200"  Height="200"                                        />
            </StackPanel>
            <Button x:ConnectionId='2' Name="SaveSong" Content="Save"                        />


        </StackPanel>
        


    </Grid>
</Page>

